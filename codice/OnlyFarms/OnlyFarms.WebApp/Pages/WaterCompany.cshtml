@page "/WaterCompanies"
@model OnlyFarms.WebApp.Pages.WaterCompanyModel
@{
        <head>
            <title> Misurazioni </title>
            <link rel="stylesheet" type="text/css" href="~/css/myStyle.css">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

        </head>
        <body>
            <div class="container">
                <div id="stripe">
                    <h1 id="heading"> WATER COMPANY </h1>
                    <img src="/img/irrigation.jpeg" id="field">
                </div>

                <form method="post">
                    <table class="table table-dark table-striped">
                        <thead>
                            <tr>
                                <th scope="col">SELECT</th>
                                <th scope="col">ADDRESS</th>
                                <th scope="col">CITY</th>
                                <th scope="col">NAME</th>
                                <th scope="col">WATER SUPPLY</th>
                            </tr>
                        </thead>
                        <tbody>
                            @await foreach (var waterC in Model.Companies)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" name="selectedItems" value="@waterC.Id" id="selectComp-@waterC.Id" />
                                    </td>
                                    <td><a href="/WaterCompany/@waterC.Id">@waterC.Address</a></td>
                                    <td>@waterC.City</td>
                                    <td>@waterC.Name</td>
                                    <td>@waterC.WaterSupply</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <span> SELECT THE WATER COMPANY THAT YOU WANT TO REMOVE</span>
                    <br />
                    <button type="button" class="btn btn-success">ADD</button>
                    <button type="button" class="btn btn-danger">REMOVE</button>
                </form>

            </div>
        </body>
}



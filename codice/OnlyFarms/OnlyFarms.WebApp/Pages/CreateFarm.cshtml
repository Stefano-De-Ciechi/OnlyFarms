@page "/FarmingCompanies/CreateFarm"
@model OnlyFarms.WebApp.Pages.CreateFarmModel
@{
}
<header>
    <link rel="stylesheet" type="text/css" href="~/css/myStyle.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css">
</header>


<div id="stripe">
    <h1 id="heading"> ADD YOUR FARMING COMPANY </h1>
</div>


<form method="post">
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label asp-for="FarmingCompany.Address">Address</label>
            <input type="text" class="form-control" asp-for="FarmingCompany.Address" placeholder="Address" value="" required>
            <span asp-validation-for="FarmingCompany.Address" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="FarmingCompany.Address">City</label>
            <input type="text" class="form-control" asp-for="FarmingCompany.City" placeholder="City" value="" required>
            <span asp-validation-for="FarmingCompany.City" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="FarmingCompany.Address">Name</label>
            <input type="text" class="form-control" asp-for="FarmingCompany.Name" placeholder="Name" value="" required>
            <span asp-validation-for="FarmingCompany.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-3 mb-3">
            <label asp-for="FarmingCompany.Address">Unique Code</label>
            <input type="text" class="form-control" asp-for="FarmingCompany.UniqueCompanyCode" placeholder="Unique Code" value="" required>
            <span asp-validation-for="FarmingCompany.UniqueCompanyCode" class="text-danger"></span>
        </div>
        <div class="col-md-3 mb-3">
            <label asp-for="FarmingCompany.Address">Water Supply</label>
            <input type="text" class="form-control" asp-for="FarmingCompany.WaterSupply" placeholder="Water Supply" value="" required>
            <span asp-validation-for="FarmingCompany.WaterSupply" class="text-danger"></span>
        </div>
    </div>
    <button class="btn btn-primary" type="submit" asp-page-handler="Submit">ADD</button>
</form>

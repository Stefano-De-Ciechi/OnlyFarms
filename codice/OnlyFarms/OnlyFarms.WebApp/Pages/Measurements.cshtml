@page "/FarmingCompanies/{farmingCompanyId:int}/{cropId:int}"
@model OnlyFarms.WebApp.Pages.MeasurementsModel
@{


    <head>
        <title> Misurazioni </title>
        <link rel="stylesheet" type="text/css" href="~/css/myStyle.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    </head>

    <div class="container">
        <div id="stripe">
            <h1 id="heading"> MEASUREMENTS / COMMANDS </h1>
            <img src="img/stripe.jpeg" id="field">
        </div>


        <table class="striped-table">
            <thead>
            <tr>
                <th scope="col">Actuator Type</th>
                <th scope="col">Tag</th>
            </tr>
            </thead>
            <tbody>
            @await foreach (var act in Model.Actuators)
            {
                <tr>
                    <th scope="row">@act.ActuatorType.</th>
                    <td>@act.Tag</td>
                </tr>
            }

            </tbody>
        </table>

        <table class="striped-table">
            <thead>
            <tr>
                <th scope="col">Sensor Type</th>
                <th scope="col">Tag</th>
            </tr>
            </thead>
            <tbody>
            @await foreach (var sens in Model.Sensors)
            {
                <tr>
                    <th scope="row">@sens.SensorType</th>
                    <td>@sens.Tag</td>
                </tr>
            }
            </tbody>
        </table>

    </div>
}
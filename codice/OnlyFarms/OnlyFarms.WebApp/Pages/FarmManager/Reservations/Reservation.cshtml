@page "/FarmingCompanies/{farmingCompanyId:int}/Reservations/Reservation"
@model OnlyFarms.WebApp.Pages.FarmManager.Reservations.ReservationModel
@{
}

<div class="row" id="box-search">
    <div class="thumbnail text-center">
        <img class="img-fluid" src="/img/waterUsage.jpg" alt="" width="85%">
        <div class="caption">
            <h1 style="color: white">RESERVATION</h1>
        </div>
    </div>
</div>
<br />
<br />
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">SELECT</th>
                <th scope="col">ADDRESS</th>
                <th scope="col">CITY</th>
                <th scope="col">NAME</th>
                <th scope="col">WATER SUPPLY</th>
            </tr>
        </thead>
        <tbody>
            @await foreach (var waterC in Model.Companies)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="selectedItems" value="@waterC.Id" id="selectComp-@waterC.Id" />
                    </td>
                    <td><a href="/WaterCompany/@waterC.Id">@waterC.Address</a></td>
                    <td>@waterC.City</td>
                    <td>@waterC.Name</td>
                    <td>@waterC.WaterSupply</td>
                </tr>
            }
        </tbody>
    </table>
    <span> SELECT THE WATER COMPANY THAT YOU WANT TO REGISTER</span>
    <br />

<div class="container mt-4">
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#registerModal">
        Register to W.C.
    </button>
</div>

<!-- Modal -->
<div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="registerModalLabel">Reservation informations</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-page-handler="reservation" method="post">
                <div class="modal-body">
                    @* Actuator Type *@
                    <div class="input-group mb-3">
                        <span class="input-group-text">Booked QTY</span>
                        <input type="text" class="form-control" asp-for="Reservation.BookedQuantity" aria-required="true" placeholder="ex. corn" required>
                        <span asp-validation-for="Reservation.BookedQuantity" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text"> Price </span>
                        <input type="text" class="form-control" asp-for="Reservation.Price" aria-required="true" placeholder="" required>
                        <span asp-validation-for="Reservation.Price" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">Water Company</span>
                        <input type="text" class="form-control" asp-for="Reservation.WaterCompanyId" aria-required="true" placeholder="" required>
                        <span asp-validation-for="Reservation.WaterCompanyId" class="text-danger"></span>
                    </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>
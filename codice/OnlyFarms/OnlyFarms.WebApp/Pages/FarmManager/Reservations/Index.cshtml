@page "/FarmingCompanies/{farmingCompanyId:int}/Reservations"
@model OnlyFarms.WebApp.Pages.FarmManager.Reservations.Index

@{
    ViewData["Title"] = "Reservations";
}

@*
    - Reservation corrente
    - Tabella cronologia
    - bottone creazione nuova prenotazione
*@
<div class="row" id="box-search">
    <div class="thumbnail text-center">
        <img class="img-fluid" src="/img/crops2.jpeg" alt="" width="85%">
        <div class="caption">
            <h1 style="color: white">RESERVATIONS</h1>
        </div>
    </div>
</div>

<br />
<h3 class="text-warning"> PRESENT RESERVATION </h3>
<div class="container mt-4">
    @if (Model.Reservation != null)
    {
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">BOOKED QUANTITY </th>
                    <th scope="col">PRICE</th>
                    <th scope="col">TIME STAMP</th>
                </tr>
            </thead>
            <tbody>
                @await foreach (var reservation in Model.Reservation)
                {
                    <tr>
                        <td>@reservation.Id</td>
                        <td>@reservation.BookedQuantity</td>
                        <td>@reservation.Price</td>
                        <td>@reservation.Timestamp</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h5 class="text-danger">You haven't registered to any water company yet!</h5>
    }
</div>



<h3 class="text-danger"> PAST RESERVATION </h3>
<div class="container mt-4">
    @if (Model.Reservation != null)
    {
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">BOOKED QUANTITY </th>
                    <th scope="col">PRICE</th>
                    <th scope="col">TIME STAMP</th>
                </tr>
            </thead>
            <tbody>
                @await foreach (var reservation in Model.PastReservations)
                {
                    <tr>
                        <td>@reservation.Id</td>
                        <td>@reservation.BookedQuantity</td>
                        <td>@reservation.Price</td>
                        <td>@reservation.Timestamp</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h5 class="text-danger">You haven't registered to any water company yet!</h5>
    }
</div>


<button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#actuatorModal" asp-page="Reservation">
    Register Now
</button>
